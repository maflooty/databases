extends base.pug
block content
    table
        tr
        th Id
        th First Name
        th Last Name
        th Email
        th Amount of money
        for user in userList
            tr
                td= user.id
                td= user.first_name
                td= user.last_name
                td= user.email
                td= user.money
    h1 Enter how much money do you want to transfer to your kid
      form(action = "/user/submit-form-transfer-post" method="POST")
        div.input
            span.label Enter amount (please enter a lot!!)
            input(type = "text", name="transferAmount")
        input(type = "submit", name="Done")