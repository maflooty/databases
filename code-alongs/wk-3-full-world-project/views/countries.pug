extends base.pug
block content  
    table
        tr
        th Code
        th
            a(href='/country?orderBy=2') Name
        th Continent
        th Region
        th SurfaceArea
        for country in countryList
            tr
                td= country.Code
                td 
                    a(href='/country/'+country.Code) #{country.Name}
                td= country.Continent
                td= country.Region
                td= country.SurfaceArea